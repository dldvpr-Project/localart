{% extends 'base.html.twig' %}

{% block title %} Mon profil {% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 text-center mb-3">
                <h1>" {{ artist.nickname }} "</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 col-lg-6 d-flex justify-content-center">
                <div class="art-homepage">
                    <img class="picture-homepage img-fluid mb-3" src="{{ artist.profilPicture }}"
                         alt="This is a profil picture">
                </div>
            </div>
            <div class="col-sm-12 col-lg-6 d-sm-flex justify-content-sm-center">
                <p class="description-homepage fs-2">{{ artist.description }}</p>
            </div>
        </div>
    </div>
{% endblock %}
