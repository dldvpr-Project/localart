{% extends 'base.html.twig' %}

{% block title %}Liste des artistes{% endblock %}

{% block body %}

    <div class="container container-lg">
        <div class="row justify-content-center">
            {% for artist in artists %}
                <div class="card col-6 col-md-4 d-flex flex-column">
                    <div class="card-header bg-black">
                    <img class=" img-fluid img-thumbnail"
                         src="{{ artist.urlProfilPicture }}"/>
                    </div>
                    <div class="mt-2 card-body">
                        <h1 class="card-title m-0 text-center">{{ artist.nickName }}</h1>
                    </div>
                    {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('admin_edit_artist', {'id': artist.id}) }}" class="btn btn-primary mb-1">Edit</a>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
