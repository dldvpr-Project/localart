{% extends 'base.html.twig' %}

{% block title %}Création d'un artiste{% endblock %}

{% block body %}
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8">
                <div class="card-register card bg-dark text-white">
                    <div class="card-body p-5 text-center">
                        <div class="mt-md-4">
                            {{ form_start(form) }}
                            <h2 class="fw-bold mb-2 text-uppercase">Créer un compte Artiste</h2>
                            <p class="description-artistType text-white-50 mb-5">Seul la description n'est pas obligatoire.</p>
                            <div class="form-outline form-white mb-4">
                                {{ form_row(form.nickname) }}
                            </div>
                            <div class="form-outline form-white mb-4">
                                {{ form_row(form.email) }}
                            </div>
                            <div class="form-outline form-white mb-4">
                                {{ form_row(form.password) }}
                            </div>
                            <div class="form-outline form-white mb-4">
                                {{ form_row(form.profilPicture) }}
                            </div>
                            <div class="form-outline form-white mb-4">
                                {{ form_row(form.description) }}
                            </div>
                            {{ form_row(form._token) }}
                            <button type="submit" class="btn btn-outline-light btn-lg px-5"
                                    value="Valider">
                                Créer
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

