{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row row-cols-2 align-items-center">
        <div class="col-12 text-center">
            <h1>" {{ artCard.title }} "</h1>
        </div>
        <div class="col-12 text-center mb-5">
            <h2 class="fst-italic fs-5">
                par {{ artCard.user.nickname }}
            </h2>
        </div>
        <div class="col d-flex justify-content-center">
            <div class="art-homepage">
                <img class="picture-homepage" src="{{ artCard.pictureArt }}">
                <p class="description-homepage">{{ artCard.description }}</p>
            </div>
        </div>
        <div class="col">
            <img class="img-fluid" src="{{ asset('build/images/placeholder/map.png') }}">
        </div>
        <div class="col-12 my-5 text-center">
            <h1>Découvrir d’autres oeuvres</h1>
        </div>
        {% for art in artCards %}
        <div class="col-3 mt-5 d-flex justify-content-center">
            <div class="art-homepage">
                <img class="picture-more-art" src="{{ art.pictureArt }}">
                <a class="btn btn-danger mt-3">Voir plus</a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
